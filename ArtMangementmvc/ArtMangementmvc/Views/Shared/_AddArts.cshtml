@model List<ArtMangementmvc.Models.SaleDetaile>
<table id="ExTable" class="table table-bordered">
    <thead>
        <tr>
            <th>Art Name</th>
            <th>Quantity</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>
                    <input type="text" class="form-control" name="SaleDetailes[@i].ArtName" value="@Model[i].ArtName" />
                </td>
                <td>
                    <input type="text" class="form-control" name="SaleDetailes[@i].Quantity" value="@Model[i].Quantity" />
                </td>
                <td>
                    @*@if (i > 0)
                    {*@
                        <button type="button" class="btn btn-danger" onclick="deleteRow(this)">Delete</button>
                    
                </td>
            </tr>
        }
    </tbody>
</table>
<input type="hidden" id="HIndex" value="@Model.Count" />
